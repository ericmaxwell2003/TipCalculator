<?xml version="1.0" encoding="utf-8"?>
<!-- TODO Lab 2: Wrap in a layout tag and add a variable called `vm` of type `com.acme.tipcalculator.model.TipCalculation` -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:showIn="@layout/saved_tip_calculations_list">

    <!-- TODO Lab 2: Bind to the vm's locationName String for this view. -->
    <TextView
        android:id="@+id/locationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@{tipCalculation.locationName}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Veggie Chop House" />

    <!-- TODO Lab 2: Bind to the vm's grandTotal Double for this view and format it as a dollar_amount. -->
    <TextView
        android:id="@+id/total_dollar_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@{@string/dollar_amount(tipCalculation.grandTotal)}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$10.00" />

</android.support.constraint.ConstraintLayout>